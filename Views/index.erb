<h1>Savage Kicks</h1>

<p>Click on a store to edit or delete:</p>
<ul>
  <% if @stores.any? %>
    <% @stores.each do |store| %>
      <a href="/store/<%= store.id %>"><li><%= store.name %></li></a>
    <% end %>
  <% else %>
    <p>There are currently no stores in the directory.</p>
  <% end %>
</ul>

<h2>Add Store:</h2>
<div class="form-control">
<form action="/create_store" method="post">
  <label for="name">store name:</label>

  <input id="name" name="name" type="text">

  <button type="submit">Submit</button>

</form>
</div>

<h4> Brands: </h4>
  <ul>
    <% if @brands.any? %>
      <% @brands.each do |brand| %>
        <li><%= brand.name %>; $<%= "%.2f" %  brand.price %></li>
        <% end %>
    <% else %>
      <p>nothing here yet!</p>
    <% end %>
  </ul>

<br>
<br>

<form action="/create_brand" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="brand_name">Add a brand: </label>
  <input id="brand_name" name="brand_name" type="text">

  <input name="_method" type="hidden" value="patch">
  <label for="price">Enter price: </label>
  <input id="price" name="price" type="text">

  <button type="submit">Add</button>
</form>
