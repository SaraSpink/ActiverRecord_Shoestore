<div class="container">
  <h2><%= @store.name %></h2>
  <form action="/store/<%= @store.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">update store name: </label>
  <input name="name" type="text" id="name">
  <button type="submit">Update</button>
  </form>

  <br>

  <a href="/"><button type="button">Return Home</button></a>
  <h5>or</h5>

  <form action="/store/<%= @store.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Remove <%= @store.name %> from database</button>
  </form>
</div>

<h4> Brands carried by <%= @store.name %>: </h4>
  <ul>
    <% if @store.brands.any? %>
      <% @store.brands.each do |brand| %>
        <li><%= brand.name %>; $<%= "%.2f" %  brand.price %></li>
        <% end %>
    <% else %>
      <p>nothing here yet!</p>
    <% end %>
  </ul>

<form action="/store/<%= @store.id%>/add_brand " method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="brand_id">Select a Brand</label>
  <select id='brand_id' name='brand_id' type='text'>
    <% @brands.each() do |brand| %>
      <option value="<%= brand.id()%>"> <%= brand.name %> </option>
    <% end %>
  </select>

  <button type="submit">Add brand</button>
</form>
