<div class="container">
  <h2><%= @store.name %></h2>
  <form action="/store/<%= @store.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">update store name: </label>
  <input name="name" type="text" id="name">
  <button type="submit">Update</button>
  </form>

  <br>

  <h4><%= @store.name %> currently stocks the following brands: </h4>
    <ul>
      <% if @store.brands.any? %>
        <% @store.brands.each do |brand| %>
          <li><%= brand.name %>; $<%= "%.2f" %  brand.price %></li>
          <% end %>
      <% else %>
        <p>nothing here yet!</p>
      <% end %>
    </ul>

  <br>
  <br>

  <form action="/store/<%= @store.id %>" method="post">
    <label for="name">Add a brand to this store: </label>
    <input id="brand_name" name="name" type="text">
    <label for="price">Enter price: </label>
    <input id="price" name="price" type="text">
    <button type="submit">Add</button>
  </form>

  <br>
  <br>

  <a href="/"><button type="button">Return Home</button></a>
  <h5>or</h5>

  <form action="/store/<%= @store.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Remove <%= @store.name %> from database</button>
  </form>

</div>
